<?xml version="1.0" encoding="utf-8"?>
<selector xmlns:android="http://schemas.android.com/apk/res/android">
    <item android:state_pressed="true">
        <layer-list xmlns:android="http://schemas.android.com/apk/res/android">
            <item>
                <shape xmlns:android="http://schemas.android.com/apk/res/android"
                    android:shape="rectangle" android:padding="60dp">
                    <solid android:color="@color/shadowGray"/>
                    <corners android:radius="15dp"/>
                </shape>
            </item>
            <item android:bottom="4dp" android:right="4dp">
                <shape xmlns:android="http://schemas.android.com/apk/res/android"
                    android:shape="rectangle">
                    <gradient
                        android:startColor="@color/selectGreen"
                        android:centerColor="@color/white"
                        android:endColor="@color/selectGreen"
                        android:angle="135"
                        android:centerX="30%"
                        />

                    <stroke android:width="5dp" android:color="@color/white" />
                    <corners android:radius="10dp"/>
                </shape>
            </item>
        </layer-list>
    </item>
    <item>
        <layer-list xmlns:android="http://schemas.android.com/apk/res/android">
            <item>
                <shape xmlns:android="http://schemas.android.com/apk/res/android"
                    android:shape="rectangle" android:padding="60dp">
                    <solid android:color="@color/shadowGray"/>
                    <corners android:radius="15dp"/>
                </shape>
            </item>
            <item android:bottom="2dp" android:right="2dp">
                <shape xmlns:android="http://schemas.android.com/apk/res/android"
                    android:shape="rectangle">
                    <gradient
                        android:startColor="@color/startPink"
                        android:centerColor="@color/lightStartPink"
                        android:endColor="@color/startPink"
                        android:angle="135"
                        android:centerX="10%"
                        />

                    <stroke android:width="2dp" android:color="@color/white" />
                    <corners android:radius="10dp"/>
                </shape>
            </item>
        </layer-list>
    </item>
</selector>